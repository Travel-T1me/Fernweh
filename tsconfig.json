{
  "compilerOptions": {
    "noEmit": false,
    "outDir": "./dist",
    "noImplicitAny": true,
    "module": "ESNext",
    "target": "ESNext",
    "jsx": "preserve",
    "allowJs": false,
    "moduleResolution": "node",
    "lib": ["DOM"],
    "allowSyntheticDefaultImports": true,
    "baseUrl": "./src",
    "typeRoots": ["./typings", "./node_modules/@types"], // added this config to recognize declaration files
    "allowSyntheticDefaultImports": true,
  },
  "include": [
    "./src/**/*",
    "./server/*"
  ]
}