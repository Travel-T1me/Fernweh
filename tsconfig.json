{
  "compilerOptions": {
    "noEmit": false,
    "outDir": "./dist",
    "noImplicitAny": true,
    "module": "ESNext",
    "target": "ESNext",
    "jsx": "preserve",
    "allowJs": false,
    "moduleResolution": "node",
    "lib": ["DOM"],
    "allowSyntheticDefaultImports": true,
    "typeRoots": ["./typings", "./node_modules/@types"]
  },
  "include": [
    "./src/**/*",
    "./server/*"
  ]
}